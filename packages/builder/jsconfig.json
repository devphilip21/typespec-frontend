{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node"],
    "moduleDetection": "force"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.js", "**/*.cjs"]
}